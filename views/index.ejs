<!DOCTYPE html>


<html lang="ar">

    <%- include("./partials/head.ejs")%>

<body id="body">
  

<%- include("./partials/header.ejs") %> 

    <main id="main">
        <section>
            <h1>
                Trending Articles &#128293;
            </h1>

            <div class="parent-of-articles">

         <%  arrArticle.forEach(item =>{ %> 
            <article>
                <h2>
                   <%= item.title %> 
                </h2>

                <p>
                  <%=   item.summary %> 

                    <a class="btn" href="/<%= item.id %> ">show more</a>
                </p>
            </article>
<% }); %> 
         


            </div>


        </section>



    </main>

    <%- include("./partials/footer.ejs")%>




</body>

</html>